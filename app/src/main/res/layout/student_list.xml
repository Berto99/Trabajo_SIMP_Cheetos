<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_student_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingTop="15dp"
            app:layout_constraintStart_toEndOf="@+id/surname_student_text"
            tools:layout_editor_absoluteY="10dp"
            tools:text="Adrián"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/surname_student_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:paddingStart="16dp"
            android:paddingTop="15dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/name_student_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/name_student_text"
            tools:text="Cortés de Dios," />



        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/name_student_text"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/name_student_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/name_student_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/name_student_text"
            app:srcCompat="@drawable/ic_chevron_black" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>