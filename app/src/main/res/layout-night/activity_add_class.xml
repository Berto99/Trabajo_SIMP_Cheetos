<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddClassActivity"
        android:background="@color/orange_pastel"
        android:padding="10dp">

        <TextView
            android:id="@+id/add_class_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/add_new_class"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/grade_class_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/grade_of_new_class"
            android:paddingStart="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/luckiest_guy"
            android:drawableStart="@drawable/ic_chevron_black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_class_text" />

        <EditText
            android:id="@+id/grade_class_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="6dp"
            android:background="@drawable/edit_text_border_dark"
            android:textColor="@color/white"
            android:inputType="number"
            android:hint="@string/put_the_grade_here_new_class"
            app:layout_constraintEnd_toEndOf="@+id/grade_class_text"
            app:layout_constraintStart_toStartOf="@+id/grade_class_text"
            app:layout_constraintTop_toBottomOf="@+id/grade_class_text" />

        <TextView
            android:id="@+id/name_class_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="@string/name_of_new_class"
            android:paddingStart="6dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_chevron_black"
            app:layout_constraintEnd_toEndOf="@+id/grade_class_input"
            app:layout_constraintStart_toStartOf="@+id/grade_class_input"
            app:layout_constraintTop_toBottomOf="@+id/grade_class_input" />

        <EditText
            android:id="@+id/name_class_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="6dp"
            android:background="@drawable/edit_text_border_dark"
            android:textColor="@color/white"
            android:hint="@string/put_the_name_here_new_class"
            app:layout_constraintEnd_toEndOf="@+id/name_class_text"
            app:layout_constraintStart_toStartOf="@+id/name_class_text"
            app:layout_constraintTop_toBottomOf="@+id/name_class_text" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/save_new_class"
            android:fontFamily="@font/luckiest_guy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>